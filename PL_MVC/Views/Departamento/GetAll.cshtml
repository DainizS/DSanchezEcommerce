@model ML.Departamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>DEPARTAMENTOS</h1>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <h2>Lista de departamentos</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div style="float:right; margin-bottom:1rem">
                @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-12">



            <table class="table table-bordered table-responsive">
                <thead>
                    <tr class="text-center">
                        <td>EDITAR</td>
                        <td class="hide">IdDepartamento</td>
                        <td>Nombre</td>
                        
                        <td>Area</td>
                        <td>ELIMINAR</td>
                    </tr>
                </thead>


                <tbody>
                    @foreach (ML.Departamento departamento in Model.Departamentos)
                    {
                        <tr class="text-center">
                            <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                            <td class="hidden">@departamento.IdDepartamento</td>
                            <td>@departamento.Nombre</td>
                            <td class="hidden">@departamento.Area.IdArea</td>
                            <td>@departamento.Area.Nombre</td>
                            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { IdDepartamento = departamento.IdDepartamento })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" ;></a></td>
                        </tr>
                    }

                </tbody>




            </table>



        </div>
    </div>



</div>

