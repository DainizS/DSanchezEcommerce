@model ML.Producto




@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1>PRODUCTOS</h1>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <h2>Lista de productos</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 text-success">
            <div style="float:right;  ">AGREGAR</div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div style="float:right; margin-bottom:1rem">
                @Html.ActionLink("+", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-12">



            <table class="table table-bordered table-responsive ">
                <thead>
                    <tr class="text-center ">
                        <td class="text-warning">EDITAR</td>
                        <td class="hide">IdProducto</td>
                        <td>Nombre</td>
                        <td>Precio Unitario</td>
                        <td>Stock</td>
                        <td>Proveedor</td>
                        <td>Departamento</td>
                        <td>Area</td>
                        <td>Descripccion</td>
                        <td>Imagen</td>
                        <td class="text-danger">ELIMINAR</td>

                    </tr>
                </thead>


                <tbody>
                    @foreach (ML.Producto producto in Model.Productos)
                    {

                        <tr class="text-center">

                            <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Producto", new { IdProducto = producto.IdProducto })"></a></td>
                            <td class="hidden">@producto.IdProducto</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.PrecioUnitario</td>
                            <td>@producto.Stock</td>
                            <td class="hidden">@producto.Proveedor.IdProveedor</td>
                            <td>@producto.Proveedor.Nombre</td>
                            <td class="hidden">@producto.Departamento.IdDepartamento</td>
                            <td>@producto.Departamento.Nombre</td>
                            <td>@producto.Departamento.Area.Nombre</td>
                            <td>@producto.Descripcion</td>
                            @if (producto.Imagen != null)
                            {
                                <td><img src="data:image/jpeg;base64,@Convert.ToBase64String(producto.Imagen)" style=" height:150px; width:150px;" /></td>
                            }
                            else
                            {
                                <td><img src="~/Content/SIN-IMAGEN.jpg" style=" height:150px; width:150px;" /></td>

                            }
                            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Producto", new { IdProducto = producto.IdProducto })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" ;></a></td>
                        </tr>
                    }

                </tbody>




            </table>



        </div>
    </div>



</div>

